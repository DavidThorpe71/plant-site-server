{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "app/types/*", "app/typeDefinitions/*"]
    },
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["app/**/*"]
}
